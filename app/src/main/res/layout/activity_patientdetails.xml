<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#009688"
    android:gravity="center"
    tools:context=".patientdetails">
    <!-- textview for Age: -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="  Age  "
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#ffffff"
        />
    <!-- edittext field for fullfil tag -->
    <EditText
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <!-- textview for "weight" -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="  Weight  "
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#ffffff"
        />
    <!-- edittext for fullfil "weight" field -->
    <EditText
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <!-- textview as "Short Description on disease"  -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="  Short Description on disease  "
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#ffffff"
        />
    <!-- edittext for fullfil the area " Short Description on disease"  -->
    <EditText
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <!-- button for submit prescription and id name = " " -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="  add previous prescription...  "
        android:textColor="#000"
        android:textSize="15dp"
        android:textStyle="bold" />
    <!-- button for submit and id name =" "  -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:text="   submit   "
        android:textColor="#000"
        android:textSize="15dp"
        android:textStyle="bold" />

</LinearLayout>