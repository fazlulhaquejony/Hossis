<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepage"
    android:background="#009688"
    android:orientation="vertical">
    <!-- homepage xml design part is here
    mostly three button and search field.
    work only first button: hospital -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7EC4BFBF"
        android:orientation="horizontal"
        android:gravity="center">
        <!-- This is a comment in this section work has done two part one. is search getting two. is search button -->
        <!-- This is a comment here two id is textview and btnsearch -->

        <EditText
            android:id="@+id/textview"
            android:layout_width="200dp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:textColor="#000"
            android:textSize="25dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/btnsearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#7EC4BFBF"
            android:hint="Search"
            android:padding="10dp"
            android:textColorHint="#000"
            android:layout_gravity="center"
            android:textSize="20dp" />
    </LinearLayout>

    <!-- This is a comment here for three major buttons we take a linear layout, horizontal-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- This is a comment here first button . button id is btnhospital -->
        <Button
            android:id="@+id/btnhospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_another"
            android:layout_margin="10dp"
            android:text="  Hospital  "
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />
        <!-- This is a comment here second button . button id is btnArea -->
        <Button
            android:id="@+id/btnarea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_another"
            android:layout_margin="10dp"
            android:text="Area"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />
        <!-- This is a comment here second button . button id is btnspecialist -->
        <Button
            android:id="@+id/btnspecialist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_another"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:text="Specialist"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>